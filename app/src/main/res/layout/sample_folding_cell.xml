<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folding_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">
    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#333333 ">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/content_image_view"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seedhe Maut Concert"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/calendar"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/content_date"
                            android:layout_width="wrap_content"
                            android:layout_height="17dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="21st Feb 2022 7:30 PM"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/liear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear1"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/location"
                            app:tint="@color/green" />

                        <TextView
                            android:id="@+id/content_venue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"

                            android:text="Pheonix Market City,Pune"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lienar3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/liear2"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

<!--                        <ImageView-->
<!--                            android:layout_width="15dp"-->
<!--                            android:layout_height="15dp"-->
<!--                            android:src="@drawable/user"-->
<!--                            app:tint="@color/green" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/registrations"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="10dp"-->
<!--                            android:gravity="center"-->
<!--                            android:text="276 people registered till now"-->
<!--                            android:textColor="@color/white"-->
<!--                            android:textSize="12dp"-->
<!--                            android:textStyle="bold" />-->
                    </LinearLayout>

                    <Button
                        android:id="@+id/view_event_details"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/lienar3"
                        android:layout_marginTop="5dp"
                        android:text="View Event Details"
                        android:textSize="10dp" />


                    <Button
                        android:id="@+id/endEvent"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/view_event_details"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#E80505"
                        android:text="End Event"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:visibility="visible"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/sample"
                android:scaleType="centerCrop"
                android:id="@+id/title_image_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/averia_gruesa_libre"
                        android:gravity="center"
                        android:id="@+id/ongoing_title"
                        android:text="Seedhe Maut Concert"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_height="match_parent"
                            android:text="Date    :"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SMAPLE LOCATION"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/ongoing_date"
                            android:textColor="@color/white"
                            android:gravity="start"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Venue :"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="SMAPLE LOCATION"
                            android:textSize="14dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/ongoing_venue"
                            android:textColor="@color/white"
                            android:gravity="start"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </FrameLayout>

</com.ramotion.foldingcell.FoldingCell>